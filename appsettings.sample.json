{
  "baseUrl": "https://en.wikipedia.org",
  "browser": {
    "browserType": "chromium",
    "headless": false,
    "timeout": 30000,
    "viewport": {
      "width": 1920,
      "height": 1080
    }
  },
  "reporting": {
    "outputPath": "./Reports",
    "captureScreenshots": true,
    "captureVideo": false
  },
  "mediaWiki": {
    "apiEndpoint": "https://en.wikipedia.org/w/api.php",
    "timeout": 10000
  },
  "logging": {
    "logLevel": "Information",
    "logFilePath": "./Reports/test-execution.log"
  }
}
